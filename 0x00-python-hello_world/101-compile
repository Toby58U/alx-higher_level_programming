#!/bin/bash

# Check if PYFILE environment variable is set
if [ -z "$PYFILE" ]; then
    echo "Error: PYFILE environment variable is not set."
    exit 1
fi

# Extract the filename and extension from PYFILE
filename=$(basename "$PYFILE")
extension="${filename##*.}"
filename_noext="${filename%.*}"

# Check if the file has a ".py" extension
if [ "$extension" != "py" ]; then
    echo "Error: The specified file is not a Python script (does not have a .py extension)."
    exit 1
fi

# Compile the Python script
python3 -m py_compile "$PYFILE"

# Check if compilation was successful
if [ $? -eq 0 ]; then
    echo "Compilation successful. Output filename: ${filename_noext}.pyc"
else
    echo "Error: Compilation failed."
fi

